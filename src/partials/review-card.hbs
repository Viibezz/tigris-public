<div class="d-flex justify-content-center align-items-center h-100">
  <div class="card text-center mx-auto d-flex align-items-center justify-content-center">
    <div class="card-body">
      <h2 class="card-title fs-4 my-1">{{name}}</h2>
      <p><small class="text-muted">{{stars}}</small></p>
      <div class="gallery-accent-line mb-3"></div>
      <div class="d-flex align-items-center h-100">
        <p class="card-text">{{{text}}}</p>
      </div>
    </div>
    {{#if url}}
    <a href="{{url}}" target="_blank" class="review-card-link mb-3">{{source_text}}</a>
    {{/if}}
  </div>
</div>