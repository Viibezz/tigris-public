  {{!-- Restaurant JSON-LD --}}
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Restaurant",
    "@id": "{{url}}/#restaurant",
    "name": "{{company}}",
    "url": "{{url}}",
    "image": "{{url}}/assets/images/logo/white-logo-1200x630.webp",
    "telephone": "{{phone}}",
    "email": "{{email}}",
    "priceRange": "$$",
    "servesCuisine": ["Middle Eastern", "Mediterranean"],
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "{{address}}",
      "addressLocality": "{{city}}",
      "addressRegion": "{{state}}",
      "postalCode": "{{zip}}",
      "addressCountry": "US"
    },
    "openingHours": ["Mo-Sa 10:00-19:00"],
    "acceptsReservations": False,
    "menu": "{{url}}/{{menu}}",
    "sameAs": [
      "{{facebook}}",
      "{{instagram}}",
      "{{yelp}}",
      "{{grubhub}}",
      "{{doordash}}",
      "{{ubereats}}"
    ],
    "aggregateRating": {
      "@type": "AggregateRating",
      "ratingValue": "4.9",
      "reviewCount": "1000"
    },
    "potentialAction": [
      {
        "@type": "OrderAction",
        "target": {
          "@type": "EntryPoint",
          "urlTemplate": "{{url}}{{menu}}",
          "actionPlatform": ["http://schema.org/DesktopWebPlatform","http://schema.org/MobileWebPlatform"]
        }
      },
      {
        "@type": "DeliveryAction",
        "target": {
          "@type": "EntryPoint",
          "urlTemplate": "{{doordash}}",
          "actionPlatform": ["http://schema.org/DesktopWebPlatform","http://schema.org/MobileWebPlatform"]
        }
      },
      {
        "@type": "DeliveryAction",
        "target": {
          "@type": "EntryPoint",
          "urlTemplate": "{{ubereats}}",
          "actionPlatform": ["http://schema.org/DesktopWebPlatform","http://schema.org/MobileWebPlatform"]
        }
      },
      {
        "@type": "DeliveryAction",
        "target": {
          "@type": "EntryPoint",
          "urlTemplate": "{{grubhub}}",
          "actionPlatform": ["http://schema.org/DesktopWebPlatform","http://schema.org/MobileWebPlatform"]
        }
      }
    ],
    "contactPoint": {
      "@type": "ContactPoint",
      "telephone": "{{phone}}",
      "email": "{{email}}",
      "contactType": "Customer Service",
      "availableLanguage": ["English","Arabic","Spanish"]
    }
  }
  </script>
